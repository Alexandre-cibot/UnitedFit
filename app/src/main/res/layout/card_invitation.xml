<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="1dp"
        card_view:cardCornerRadius="3dp"
        android:clickable="false" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="12dp"
            android:paddingEnd="8dp"
            android:paddingStart="8dp"
            android:paddingTop="12dp">

            <ImageView
                android:id="@+id/profilImage"
                android:layout_width="47dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/profil_lucille" />

            <LinearLayout
                android:layout_width="188dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewInvitationItemPseudo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_bold"
                    android:text="Lucille"
                    android:textColor="@color/black_classic"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textViewInvitationItemDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_regular"
                    android:text="@string/_100_pompes_un_doigt" />
            </LinearLayout>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/button3"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginStart="40dp"
                card_view:backgroundTint="@color/highlight"
                android:src="@drawable/validate_shape"

                card_view:srcCompat="@drawable/validate_shape" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/button2"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginStart="8dp"
                card_view:backgroundTint="@color/light_gray"
                card_view:srcCompat="@drawable/refuse_shape" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>